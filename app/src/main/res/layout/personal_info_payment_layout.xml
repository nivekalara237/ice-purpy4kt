<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/personal_info_layout"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personnal Informations"
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:textSize="19sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/personnal_text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Fullname"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/flatGrey"
            android:id="@+id/fullnamelabel"
            android:paddingTop="8dp"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullnamelabel"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:singleLine="true"
            android:inputType="text"
            android:textColor="@color/flatBlack"
            android:textSize="15sp"
            android:hint="@string/enter_your_full_name"
            android:background="@drawable/bg_edittext"
            android:autofillHints="E.g: Kevin Kemta" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Phone number"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/flatGrey"
            android:id="@+id/phonelabel"
            android:paddingTop="8dp"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phonelabel"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:textColor="@color/flatBlack"
            android:textSize="15sp"
            android:singleLine="true"
            android:inputType="phone"
            android:hint="Enter your phone number"
            android:background="@drawable/bg_edittext"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Email address"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/flatGrey"
            android:id="@+id/emaillabel"
            android:paddingTop="8dp"
            android:paddingBottom="5dp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emaillabel"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:textColor="@color/flatBlack"
            android:textSize="15sp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="Enter your email address"
            android:background="@drawable/bg_edittext"/>
    </RelativeLayout>

</LinearLayout>