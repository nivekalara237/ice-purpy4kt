<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:paddingRight="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="?attr/selectableItemBackgroundBorderless"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_baseline_shopping_cart_white_24"/>

    <FrameLayout
        android:id="@+id/view_cart_circle"
        android:layout_width="@dimen/menu_item_ripple_size"
        android:layout_height="@dimen/menu_item_ripple_size"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_yellow"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/view_cart_badge_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:textColor="@android:color/white"
            android:textSize="6sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="3"
            tools:visibility="visible" />

    </FrameLayout>

</FrameLayout>