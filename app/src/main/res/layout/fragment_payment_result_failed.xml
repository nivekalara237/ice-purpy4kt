<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infra.fragment.PaymentResultFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerInParent="true"
        android:contentDescription="TODO" android:src="@drawable/ic_baseline_close_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textStyle="normal"
        android:layout_below="@+id/image"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_blank_fragment" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingHorizontal="28dp"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/increase_qte"
                android:src="@drawable/ic_baseline_add_white_24"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:paddingVertical="4dp"
                android:text="Back"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:textAllCaps="false"
                android:paddingHorizontal="28dp"
                android:gravity="center"
                android:tint="@android:color/white"
                android:background="@drawable/bg_button_back"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/backshopping"
                android:src="@drawable/ic_baseline_add_white_24"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp"
                android:text="Back to shop"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:paddingHorizontal="28dp"
                android:gravity="center"
                android:tint="@android:color/white"
                android:background="@drawable/bg_button2_backshop"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>